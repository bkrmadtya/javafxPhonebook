            </HBox>
            <HBox id="input" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-background-insets: 0, 0 0 1 0;" styleClass="hbox" stylesheets="@../styles/style.css">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/password.png" />
                     </image>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </ImageView>
                      <PasswordField fx:id="passwordText" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="35.0" prefWidth="350.0" promptText="password" />
