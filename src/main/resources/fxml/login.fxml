                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Button>
                <Hyperlink fx:id="registerUser" onAction="#goToRegister" text="Register" underline="true">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Hyperlink>
            </children>
