<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sda.practicalproject.phonebook.controller.UserRegisterController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="140.0" layoutY="65.0" prefHeight="200.0" prefWidth="291.0" stylesheets="@../styles/style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Register User">
                    <VBox.margin>
                        <Insets top="40.0" />
                    </VBox.margin>
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TextField fx:id="usernameText" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="35.0" prefWidth="350.0" promptText="username">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="passwordText" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="35.0" prefWidth="351.0" promptText="password">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
            <TextField fx:id="passwordText2" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="35.0" prefWidth="351.0" promptText="confirm password">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TextField>
                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleUserRegister" prefHeight="35.0" prefWidth="90.0" stylesheets="@../styles/style.css" text="Register">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Hyperlink fx:id="loginUser" onAction="#goToLogin" text="Go to Login">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Hyperlink>
                <Label fx:id="errorText" textFill="RED">
                    <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
