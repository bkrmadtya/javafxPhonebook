<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sda.practicalproject.phonebook.controller.UserRegisterController">
    <children>
      <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="291.0" stylesheets="@../styles/style.css">
                  <children>
                      <Label text="Register User">
                          <VBox.margin>
                              <Insets top="40.0" />
                          </VBox.margin>
                          <font>
                              <Font size="24.0" />
                          </font>
                      </Label>
                  <HBox id="input" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="@../styles/style.css">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <children>
                        <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/user.png" />
                           </image>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </ImageView>
                            <TextField fx:id="usernameText" maxHeight="-Infinity" maxWidth="-Infinity" onKeyPressed="#emptyErrorText" prefHeight="35.0" prefWidth="350.0" promptText="username">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </TextField>
                     </children>
                  </HBox>
                  <HBox id="input" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="@../styles/style.css">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <children>
                        <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/password.png" />
                           </image>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </ImageView>
                            <TextField fx:id="passwordText" maxHeight="-Infinity" maxWidth="-Infinity" onKeyPressed="#emptyErrorText" prefHeight="35.0" prefWidth="351.0" promptText="password">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </TextField>
                     </children>
                  </HBox>
                  <HBox id="input" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="@../styles/style.css">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                     <children>
                        <ImageView fitHeight="14.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/password.png" />
                           </image>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </ImageView>
                        <TextField fx:id="passwordText2" maxHeight="-Infinity" maxWidth="-Infinity" onKeyPressed="#emptyErrorText" prefHeight="35.0" prefWidth="351.0" promptText="confirm password">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </HBox>
                      <Label fx:id="errorText" textFill="#fc3e3e">
                          <VBox.margin>
                              <Insets top="20.0" />
                          </VBox.margin>
                          <font>
                              <Font size="14.0" />
                          </font>
                      </Label>
                      <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleUserRegister" prefHeight="35.0" prefWidth="90.0" stylesheets="@../styles/style.css" text="Register">
                          <VBox.margin>
                              <Insets top="20.0" />
                          </VBox.margin>
                      </Button>
                      <Hyperlink fx:id="loginUser" onAction="#goToLogin" text="Go to Login" underline="true">
                          <VBox.margin>
                              <Insets top="20.0" />
                          </VBox.margin>
                      </Hyperlink>
                  </children>
              </VBox>
         </children>
      </StackPane>
      <Hyperlink layoutX="10.0" layoutY="10.0" onMouseClicked="#goToAbout" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" onMouseClicked="#goToAbout" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/info.png" />
               </image>
            </ImageView>
         </graphic>
      </Hyperlink>
    </children>
</AnchorPane>
